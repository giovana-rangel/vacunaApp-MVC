@model vacunaApp.Models.Persona

@{
    ViewBag.Title = "Create";
}

<h2>Registro de Personas</h2>
<br />
@if (ViewBag.Message != null)
 {
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
 }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Personal Data</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-12">Nombre Completo</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row col-md-10">
            <div class="col-md-6 col-sm-12">
                <label class="control-label col-md-12">Fecha de Nacimiento</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "datepicker form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6 col-sm-12">
                <label class="control-label col-md-12">Nacionalidad</label>
                <div class="mb-4">
                    @Html.EditorFor(model => model.Nacionalidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nacionalidad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row col-md-10">

            <div class="col-md-6 col-sm-12">
                <label class="control-label col-md-12">Tipo de Documento</label>
                <div class="mb-3">
                    @Html.DropDownListFor(model => model.TipoDocumento, new SelectList(ViewBag.list), "Seleccione el tipo de documento", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TipoDocumento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6 col-sm-12">
                <label class="control-label col-md-12">Número de Documento</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.NumeroDocumento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumeroDocumento, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br />
        <h4>Contacto</h4>
        <hr />

        <div class="row col-md-10">
            <div class="col-md-4 col-sm-12">
                <label class="control-label col-md-12">Teléfono</label>
                <div class="mb3">
                    @Html.EditorFor(model => model.contacto.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.contacto.Telefono, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <label class="control-label col-md-12">Teléfono de Emergencia</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.contacto.TelefonoEmergencia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.contacto.TelefonoEmergencia, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <label class="control-label col-md-12">Email</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.contacto.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.contacto.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br />
        <h4>Dirección</h4>
        <hr />

        <div class="row col-md-10">
            <div class="col-md-4 col-sm-12">
                <label class="control-label col-md-12">Provincia</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.Direccion.Provincia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Direccion.Provincia, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <label class="control-label col-md-12">Ciudad</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.Direccion.Ciudad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Direccion.Ciudad, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <label class="control-label col-md-12">Código Postal</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.Direccion.CodigoPostal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Direccion.CodigoPostal, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row col-md-10">
            <div class="col-md-4 col-sm-12">
                <label class="control-label col-md-12">Calle</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.Direccion.Calle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Direccion.Calle, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <label class="control-label col-md-12">Número de Vivienda</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.Direccion.NumeroCalle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Direccion.NumeroCalle, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <label class="control-label col-md-12">Número de Departamento</label>
                <div class="mb-3">
                    @Html.EditorFor(model => model.Direccion.Otro, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Direccion.Otro, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-ui-1.13.0.min.js"></script>
<script>
    $(function () {
        $(".datepicker").datepicker({
            dateFormat: "yy-mm-dd",
            changeMonth: true,
            changeYear: true,
            yearRange: "1950:2021"
        });
    })
</script>
