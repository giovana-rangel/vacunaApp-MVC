@model IEnumerable<vacunaApp.Models.Vacunas>

@{
    ViewBag.Title = "Vacunas";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Vacunas</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th><small><strong>Vacunas</strong></small></th>
                        <th><small><strong>Stock</strong></small></th>
                        <th><small><strong>Centro Médico</strong></small></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vacunas in Model)
                     {
                    <tr>
                        <td><small>@vacunas.TipoVacuna</small></td>
                        <td><small>@vacunas.Stock</small></td>
                        <td><small>@vacunas.CentroMedico</small></td>
                    </tr>
                     }
                </tbody>

            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
</script>