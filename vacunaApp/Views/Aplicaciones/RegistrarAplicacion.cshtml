@model vacunaApp.Models.Aplicaciones

@{
    ViewBag.Title = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Aplicaciones</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th><small><strong>Nombre</strong></small></th>
                        <th><small><strong>DNI</strong></small></th>
                        <th><small><strong>Vacuna</strong></small></th>
                        <th><small><strong>Dosis</strong></small></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var aplicacion in Model)
                    {
                    <tr>
                        <td><small>@aplicacion.Persona.Nombre</small></td>
                        <td><small>@aplicacion.Persona.NumeroDocumento</small></td>
                        <td><small>@aplicacion.Vacunas.TipoVacuna</small></td>
                        <td><small>@aplicacion.Dosis</small></td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
</script>
