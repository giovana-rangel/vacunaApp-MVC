@model IEnumerable<vacunaApp.Models.Aplicacion>

@{
    ViewBag.Title = "Data";
}


<h2>Data</h2>
<hr />
@if (ViewBag.Message != null)
 {
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
 }

<div class="row">
    <br />
    <div class="col text-center mt-2">
        <h4>Total de Dosis aplicadas</h4>
    </div>

</div>
<div class="row text-center text-light m-4">
    <div class="col">
        <div class="counter">

            <h2 class="timer count-title count-number" data-to="@ViewBag.PfizerCounter" data-speed="1500"></h2>
            <p class="count-text ">Pfizer</p>
        </div>
    </div>
    <div class="col">
        <div class="counter ">

            <h2 class="timer count-title count-number" data-to="@ViewBag.SinopharmCounter" data-speed="1500"></h2>
            <p class="count-text ">Sinopharm</p>
        </div>
    </div>
    <div class="col">
        <div class="counter">

            <h2 class="timer count-title count-number" data-to="@ViewBag.SputnikCounter" data-speed="1500"></h2>
            <p class="count-text ">Sputnik</p>
        </div>
    </div>
    <div class="col">
        <div class="counter">

            <h2 class="timer count-title count-number" data-to="@ViewBag.AstraCounter" data-speed="1500"></h2>
            <p class="count-text ">Astra Zéneca</p>
        </div>
    </div>
</div>

<div class="m-5 card card-body">
    <h4 class="mb-4">Buscar dosis aplicadas por fecha</h4>
    <form class="row" method="post">
        <div class="mb-3 col-5">
            <input class="datepicker form-control" id="desde" name="desde" placeholder="Desde" required />
        </div>
        <div class="mb-3 col-5">
            <input class="datepicker form-control" id="hasta" name="hasta" placeholder="Hasta" required />
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Buscar</button>
        </div>

    </form>

    <div class="card shadow m-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Aplicaciones</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th><small><strong>Fecha</strong></small></th>
                            <th><small><strong>Vacuna</strong></small></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var aplicacion in Model)
                        {
                            <tr>
                                <td><small>@aplicacion.Fecha.ToString("dd/MM/yy")</small></td>
                                <td><small>@aplicacion.Vacuna</small></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.13.0.min.js"></script>
<script>
    $(function () {
        $(".datepicker").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "1950:2021"
        });
    })
</script>
